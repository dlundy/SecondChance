#member_profile_form
  - if @member.profile_image
    .clearfix
      = image_tag(@member.profile_image.url)
  - form_for @member, :html => {:multipart => true} do |f|  
    .clearfix
      = f.label :profile_image, 'Upload New Image'
      = f.file_field :profile_image
      = f.hidden_field :retained_profile_image      
    .clearfix
      = f.label :email, 'Email'
      .input
        = f.text_field :email
    .clearfix
      = f.label :phone, 'Phone'
      .input
        = f.text_field :phone
    .clearfix
      = f.label :first_name, 'First Name'
      .input
        = f.text_field :first_name
    .clearfix
      = f.label :last_name, 'Last Name'
      .input
        = f.text_field :last_name
    .clearfix
      = f.label :address_1, 'Address 1'
      .input
        = f.text_field :address_1
    .clearfix
      = f.label :address_2, 'Address 2'
      .input
        = f.text_field :address_2
    .clearfix
      = f.label :city, 'City'
      .input
        = f.text_field :city
    .clearfix
      = f.label :state, 'State'
      .input
        = f.text_field :state
    .clearfix
      = f.label :zipcode, 'Zip Code'
      .input
        = f.text_field :zipcode
    .actions
      = f.submit 'Update Info', :class => 'btn primary'
    