#member_form
  = render :partial => "form"

.clearfix

#member_dogs
  %h3 Current Dogs
  %ul
    - @member.dogs.each do |dog|
      %li
        = raw(dog.name + button_to('Remove', remove_dog_admin_member_path(@member, :dog_id => dog.id)))
  = form_tag add_dog_admin_member_path(@member) do 
    .field
      = select_tag :dog_id, options_for_select(@member.available_dogs.map{|d| [d.name, d.id]})
      = submit_tag 'Add Dog'
  