= form_for [:admin, @member] do |f| 
  = render :partial => "/shared/admin/error_messages", :locals => { :object => @member, :include_object_name => true}
  
  .field
    = f.label :email
    = f.text_field :email
  
  .field
    = f.label :first_name
    = f.text_field :first_name
  
  .field
    = f.label :last_name
    = f.text_field :last_name
  
  .field
    = f.label :address_1
    = f.text_field :address_1
  
  .field
    = f.label :address_2
    = f.text_field :address_2
  
  .field
    = f.label :city
    = f.text_field :city
  
  .field
    = f.label :state
    = f.text_field :state
  
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  
  .field
    = f.label :phone
    = f.text_field :phone
    
  = render :partial => "/shared/admin/form_actions",
    :locals => {:f => f, :continue_editing => false, :delete_title => t('delete', :scope => 'admin.members.member'), :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @member.email)}
