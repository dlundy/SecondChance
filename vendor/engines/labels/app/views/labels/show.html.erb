<% content_for :body_content_title do %>
  <%= @label.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @label.name %>
    </p>
  </section>
  <section>
    <h1>Hex Code</h1>
    <p>
      <%=raw @label.hex_code %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @label.type %>
    </p>
  </section>
  <section>
    <h1>Active</h1>
    <p>
      <%=raw @label.active %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="labels">
      <% @labels.each do |label| %>
        <li>
          <%= link_to label.name, label_path(label) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
