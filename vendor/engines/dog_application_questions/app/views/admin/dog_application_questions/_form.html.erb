<%= form_for [:admin, @dog_application_question] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @dog_application_question,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :question_text -%>
    <%= f.text_field :question_text, :class => 'larger widest'  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.dog_application_questions.dog_application_question'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @dog_application_question.question_text)
              } %>
<% end -%>
