<ul>
  <% if Admin::DogApplicationQuestionsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_dog_application_questions_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_dog_application_question_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::DogApplicationQuestionsController.sortable? and DogApplicationQuestion.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Dog Application Questions"),
                 admin_dog_application_questions_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Dog Application Questions"),
                 admin_dog_application_questions_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>