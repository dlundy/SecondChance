%h1 Sign Up
#registration_form
  = form_for Member.new, :url => member_registration_path do |f|
    .clearfix
      = f.label :email, 'Email'
      .input
        = f.text_field :email
    .clearfix
      = f.label :password, 'Password'
      .input
        = f.password_field :password
    .clearfix
      = f.label :password_confirmation, 'Confirm Password'
      .input
        = f.password_field :password
    .actions
      = f.submit 'Sign Up', :class => 'btn primary'