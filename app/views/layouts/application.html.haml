-content_for :stylesheets do
  -stylesheet_link_tag 'bootstrap', 'base', 'home', 'dogs-viewer'

-content_for :javascript_libraries do
  =javascript_include_tag "jquery.min", "jquery_ujs", "jquery.tweet", "underscore-min"
  =javascript_include_tag "bootstrap/bootstrap-twipsy"
  =javascript_include_tag "bootstrap/bootstrap-popover"
  =javascript_include_tag "application"
  =javascript_include_tag "dog-viewer"

!!! 5
%html
  -site_bar = render(:partial => "/shared/site_bar", :locals => {:head => true})
  = render :partial => "/shared/head"

  %body
    = site_bar
    .topbar
      .topbar-inner
        .container
          = link_to image_tag('logo.png'), root_path, {:class => 'brand'}
          %ul.nav
            %li.active
              %a{:href => root_path} Dogs
            / %li
            /   %a{:href => "#resources"} Owner Surrenders
            %li
              %a{:href => "#about"} Events
            %li
              %a{:href => '/adoption_application'} Adoption Application
            %li
              %a{:href => "#contact"} How to Help 
    .container.main
      = yield
      %footer
        =render :partial => 'shared/footer'
    = render :partial => "/shared/javascripts"
