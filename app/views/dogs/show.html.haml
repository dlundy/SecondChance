<div id="fb-root"></div>

-content_for :stylesheets do
  -stylesheet_link_tag 'dog'

-content_for :javascripts do
  -javascript_include_tag 'dog'

-content_for :title do
  =@dog.name

-content_for :body_content_title do
  =@dog.name

.dog-title
  %h1= raw @dog.name
  %h2= raw @dog.breed

.row.dog-info
  .span5
    #main_photo
      %img{:src => @dog.primary_photo.url}

    #thumb_photos
      %ul#thumbs_list.unstyled
        - @dog.dog_photos.thumbs.each do |photo|
          -unless photo.url.nil?
            %li{'data-full-photo-url'.to_sym => photo.get_full_photo.url}
              %img{:src => photo.url, :class => (photo.primary? ? 'selected' : nil)}
    #info
      %section
        %dl
          -unless @dog.sex.nil?
            %dt
              Sex:
              %dd= raw @dog.sex
          -unless @dog.weight.nil?
            %dt
              Weight:
              %dd= raw @dog.weight
          -unless @dog.age.nil?
            %dt
              Age:
              %dd= raw @dog.age
          -unless @dog.color.nil?
            %dt
              Colors:
              %dd= raw @dog.color
  .span7
    .share
      %h4 Share This Page
      -dog_url = url_for(:action => 'show', :controller => 'dogs', :id => @dog.id, :only_path => false)
      <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
      <div class="fb-like" data-href="#{u dog_url}" data-send="true" data-width="450" data-show-faces="true"></div>
      %hr
    .description
      %section
        =raw @dog.description
